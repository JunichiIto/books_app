<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :study_date %>
    <%= form.date_field :study_date %>
  </div>

  <div class="field">
    <%= form.label :feeling %>
    <%= form.radio_button :feeling, 'sad' %>
    <%= form.label :sad %>
    <%= form.radio_button :feeling, 'soso' %>
    <%= form.label :soso %>
    <%= form.radio_button :feeling, 'happy' %>
    <%= form.label :happy %>
  </div>

  <div class="field">
    <%= form.label :study_start_time %>
    <%= form.time_field :study_start_time %>
  </div>

  <div class="field">
    <%= form.label :study_finish_time %>
    <%= form.time_field :study_finish_time %>
  </div>


  <div class="field">
    <%= form.label :report_content %>
    <%= form.text_area :report_content, size: '80x30' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
